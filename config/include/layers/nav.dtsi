#define B_NAV(key) B_LAYER(nav, key)

/ {
    keymap {
        nav {
            bindings = <
        // ╭──────────────┬──────────────┬──────────────┬──────────────┬──────────────╮   ╭──────────────┬──────────────┬──────────────┬──────────────┬──────────────╮
        // │              │              │              │              │              │   │              │              │              │              │              │
             &none          &none          &none          &none          &none              &none          &none          &none          &none          &none
        // ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
        // │  GUI         │  ALT         │  CONTROL     │  SHIFT       │              │   │  keynav      │  LEFT        │  DOWN        │  UP          │  RIGHT       │
             MT_SK(LGUI)    MT_SK(LALT)    MT_SK(LCTRL)   MT_SK(LSHFT)   &caps_word         &kp LC(SEMI)   &kp LEFT       &kp DOWN       &kp UP         &kp RIGHT
        // ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┼──────────────┼──────────────┤
        // │              │              │              │              │              │   │              │  HOME        │  PAGE DOWN   │  PAGE UP     │  END         │
             &none          &none          &none          &none          &none              &none          &kp HOME       &kp PG_DN      &kp PG_UP      &kp END
        // ╰──────────────┴──────────────┴──────────────┼──────────────┼──────────────┤   ├──────────────┼──────────────┼──────────────┴──────────────┴──────────────╯
        //                                              |              |              |   |              |              |
                                                          &none          &trans             &none          &none
        //                                              ╰──────────────┴──────────────╯   ╰──────────────┴──────────────╯
            >;
        };
    };

    combos {
      tog_nav {
        timeout-ms = <50>;
        key-positions = <7 16 18>;
        bindings = <&tog L_NAV>;
      };
    };

    behaviors {
        layers {
            nav {
            };
        };
    };
};
