#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

#include "include/behaviors.dtsi"
#include "include/layers.dtsi"

/ {
    keymap {
        compatible = "zmk,keymap";
    };

    combos {
        compatible = "zmk,combos";
        combo_repeat_l_rm {
            timeout-ms = <50>;
            key-positions = <11 12>;
            bindings = <&kp ESCAPE>;
        };
        combo_repeat_l_mi {
            timeout-ms = <50>;
            key-positions = <12 13>;
            bindings = <&key_repeat>;
        };
        combo_repeat_r_mi {
            timeout-ms = <50>;
            key-positions = <16 17>;
            bindings = <&key_repeat>;
        };
        combo_repeat_r_rm {
            timeout-ms = <50>;
            key-positions = <17 18>;
            bindings = <&kp ESCAPE>;
        };
        combo_meta {
            timeout-ms = <50>;
            key-positions = <30 33>;
            bindings = <&to L_META>;
        };
    };
};
